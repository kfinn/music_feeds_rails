<!DOCTYPE html>
<html>
  <head>
    <title>MusicFeedsRails</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, user-scalable=no" />
  </head>

  <body>
    <nav class="Navigation">
      <%= link_to 'MusicFeed', '/', class: 'Navigation-item' %>
      <%= link_to 'Songs', songs_path, class: 'Navigation-item' %>
      <%= link_to 'Recommendations', recommendations_path, class: 'Navigation-item' %>
      <%= link_to 'Feeds', feeds_path, class: 'Navigation-item' %>
      <%= link_to 'Playlists', playlists_path, class: 'Navigation-item' %>
      <%= link_to 'Me', me_path, class: 'Navigation-item' %>
    </nav>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= link_to('sign in with spotify', user_spotify_omniauth_authorize_path) unless user_signed_in? %>
    <%= yield %>
  </body>
</html>
